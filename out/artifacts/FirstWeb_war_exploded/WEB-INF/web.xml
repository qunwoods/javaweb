<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <servlet>
    <servlet-name>ServletDemo</servlet-name>
    <servlet-class>com.servlet.test.ServletDemo</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ServletGetInitParameter</servlet-name>
    <servlet-class>com.servlet.test.ServletGetInitParameter</servlet-class>
    <init-param>
      <param-name>repeat</param-name>
      <param-value>5</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>ServletGetServerInfo</servlet-name>
    <servlet-class>com.servlet.test.ServletGetServerInfo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletLogin</servlet-name>
    <servlet-class>com.servlet.test.ServletLogin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletSetCookie</servlet-name>
    <servlet-class>cookie.ServletSetCookie</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletGetCookie</servlet-name>
    <servlet-class>cookie.ServletGetCookie</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletSessionDemo</servlet-name>
    <servlet-class>session.ServletSessionDemo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletAddShoppingCart</servlet-name>
    <servlet-class>shoppingcart.ServletAddShoppingCart</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletGetShoppingCart</servlet-name>
    <servlet-class>shoppingcart.ServletGetShoppingCart</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ServletDemo</servlet-name>
    <url-pattern>/servletDemo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletGetInitParameter</servlet-name>
    <url-pattern>/ServletGetInitParameter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletGetServerInfo</servlet-name>
    <url-pattern>/ServletGetServerInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletLogin</servlet-name>
    <url-pattern>/ServletLogin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletSetCookie</servlet-name>
    <url-pattern>/ServletSetCookie</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletGetCookie</servlet-name>
    <url-pattern>/ServletGetCookie</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletSessionDemo</servlet-name>
    <url-pattern>/ServletSessionDemo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletAddShoppingCart</servlet-name>
    <url-pattern>/ServletAddShoppingCart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletGetShoppingCart</servlet-name>
    <url-pattern>/ServletGetShoppingCart</url-pattern>
  </servlet-mapping>
</web-app>